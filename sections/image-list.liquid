{% schema %}
{
  "name": "Logo list / Feature list",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 20,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Icon / image size",
      "default": 50
    },
    {
      "type": "checkbox",
      "id": "enlarge_text",
      "label": "Enlarge text",
      "default": false
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "none",
          "label": "Default"
        },
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "custom",
          "label": "Custom (set below)"
        }
      ],
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Custom background color"
    },
    {
      "type": "color",
      "id": "color_heading",
      "label": "Custom heading color"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Custom text color"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Image logo",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "default": "Logo / feature"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Overrides icon when selected"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image List",
      "blocks": [
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
